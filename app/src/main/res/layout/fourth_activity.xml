<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_1"
    android:orientation="vertical"
    tools:context=".FourthActivity">

    <include
        android:id="@+id/title_list"
        layout="@layout/title_name_product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragment_list_vip_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fragment_list_product_horizontal_fragment"
            class="com.example.jaja.fragment.ListProductHorizontalFragment"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>


</RelativeLayout>