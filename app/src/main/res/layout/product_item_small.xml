<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="160dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:background="@color/black"
    app:cardBackgroundColor="@color/primary_1"
    android:layout_height="220dp">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:background="@color/primary_1"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:id="@+id/image_avt_product_small"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/product_name_small"
            style="@style/NameProductOnListStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="Bike_01"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/product_price_small"
            style="@style/PriceProductOnListStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:padding="6dp"
            android:text="$ 1999.99" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
